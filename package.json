{
    "name": "etk",
    "version": "0.1.1",
    "description": "Extract translation keys in form of key-value pairs from files: js, handlebars",
    "license": "MIT",
    "author": {
        "name": "tnifey",
        "email": "tnifey@gmail.com"
    },
    "readme": "README.md",
    "scripts": {
        "extract-translations": "node extract -o .translations.py -o .translations.json -o .translations.po \"resources/**/*.(js|ts|handlebars)\"",
        "prepare": "husky install",
        "format": "prettier --write \"src/**/*\"",
        "lint:prettier": "prettier --check --ignore-unknown --write"
    },
    "main": "./src/index.js",
    "bin": {
        "etk": "./src/bin/extract.js"
    },
    "dependencies": {
        "fast-glob": "^3.2.11",
        "gettext-parser": "^5.1.2",
        "i18next-scanner": "^3.1.0",
        "minimist": "^1.2.6",
        "xgettext-template": "^4.1.1"
    },
    "devDependencies": {
        "@types/node": "^17.0.33",
        "husky": "^8.0.1",
        "prettier": "^2.6.2"
    }
}
