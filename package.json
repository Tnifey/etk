{
    "name": "etk",
    "version": "0.1.1",
    "description": "Extract translation keys in form of key-value pairs from files: js, handlebars",
    "license": "MIT",
    "author": {
        "name": "tnifey",
        "email": "tnifey@gmail.com"
    },
    "readme": "README.md",
    "scripts": {
        "dev": "esno src/bin/cli.ts -o .translations.py -o .translations.json -o .translations.po \"resources/**/*.(js|ts|handlebars)\"",
        "start": "esno src/bin/cli.ts -o .translations.py -o .translations.json -o .translations.po \"resources/**/*.(js|ts|handlebars)\"",
        "prepare": "husky install",
        "format": "prettier --write \"src/**/*\"",
        "lint:prettier": "prettier --check --ignore-unknown --write",
        "build": "npx esbuild ./src/bin/cli.js --bundle --outdir=build --minify --minify-whitespace --target=node16 --platform=node"
    },
    "main": "./dist/cli.js",
    "bin": {
        "etk": "./dist/cli.js"
    },
    "dependencies": {
        "fast-glob": "^3.2.11",
        "gettext-parser": "^5.1.2",
        "i18next-scanner": "^3.1.0",
        "minimist": "^1.2.6",
        "xgettext-template": "^4.1.1"
    },
    "devDependencies": {
        "@types/node": "^17.0.33",
        "esbuild": "^0.14.39",
        "esno": "^0.15.0",
        "git-branch-is": "^4.0.0",
        "husky": "^8.0.1",
        "prettier": "^2.6.2",
        "typescript": "^4.8.0-dev.20220514"
    }
}
